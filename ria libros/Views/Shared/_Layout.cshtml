<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ria libros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Libros" asp-action="Welcome">Ria libros</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Libros" asp-action="Index">Iniciar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Libros" asp-action="Privacy">Acerca de la web</a>
                        </li>
                    </ul>

                    <!--Me quede aqui trabajando con el inicio de sesion de usuarios administradores-->
                    <form asp-controller="Libros" asp-action="Index" method="get">
                        <div class="row justify-content-end">
                            <label class="align-self-center mr-3" for="usuario"> Administradores</label>
                            <input class="form-control col-2 mr-3" type="text" id="usuario" name="usuario" placeholder="Usuario" />
                            <input class="form-control col-2 mr-3" type="text" id="contra" name="contra" placeholder="Contraseña" />
                            <input type="submit" class="btn btn-primary form-control col-2" value="Iniciar sesion" />
                        </div>

                    </form>


                </div>


            </div>
        </nav>
        <div class="row justify-content-center">
            <div class="col-10">
                @if (ViewBag.ConfirmAdmin == false)
                {<!--Me quede trabajando con las condiciones para que se pueda editar y eliminar y las alertas-->
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Oops...</strong> Usuario o contraseña invalida
                        
                    </div>
                }
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Ria libros - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
